{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "no-tabs": [
            "warn",
            {
                "allowIndentationTabs": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "max-len": [
            "warn",
            {
                "code": 250,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ],
        "react/jsx-uses-vars": [
            2
        ],
        "react/jsx-uses-react": 1,
        "prefer-template": [
            "error"
        ],
        "no-invalid-this": [
            0
        ]
    }
}